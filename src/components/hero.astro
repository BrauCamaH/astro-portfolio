---
import { Image } from "@astrojs/image/components";
import Link from "@components/ui/link.astro";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-8">
  <div class="py-6 md:order-1 hidden md:block">
    <Image
      src={import("../assets/profile.png")}
      alt="Astronaut in the air"
      loading="eager"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight">
      Braulio Guadalupe Camarena Huerta
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      I am always glad to share my knowledge and make something valuable out of it.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://github.com/BrauCamaH"
        target="_blank"
        rel="noopener">
        Github
      </Link>

      <a>
        <Link
          size="lg"
          style="outline"
          rel="noopener"
          href="https://medium.com/@braulio-camarenah"
          target="_blank">
          Medium
        </Link>
      </a>
    </div>
  </div>
</main>
